<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Rooms & Prices</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for better icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="/js/hotels.js" defer></script>
    <style>
@import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Modern+Antiqua&family=Monoton&display=swap');
@import url("https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,600,700,300i,600i,700i|Raleway:600,800");

:root {
    --black: #000000;
    --gray: #323232;
    --teal: #0D7377;
    --aqua: #14FFEC;
}

body {
    background-color: #000;
    color: white;
    padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.hidden {
    display: none;
}

.back-link {
    color: var(--teal);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    font-size: 1.2rem;
    transition: color 0.3s, text-decoration 0.3s;
    position: absolute;
    top: 5px;
    right: 5px;
}

.back-link:hover {
    color: var(--aqua);
    text-decoration: underline;
}
/*
.back-link:visited {
    color: var(--gray);
}*/

.back-link img {
    margin-right: 8px;
    width: 20px;
    height: 20px;
    transition: content 0.3s;
}
.back-link:hover img {
    content: url('/stuff/icon/undo_aqua.svg');
}

.back-link:visited img {
    content: url('/stuff/icon/undo_gray.svg');
}


#header {
    background-color: #111;
    color: white;
    padding: 4rem 2rem;
    text-align: center;
    margin-bottom: 2rem;
    border-bottom: 3px solid var(--teal);
    position: relative;
    overflow: hidden;
}

#header:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(13, 115, 119, 0.2), transparent);
    z-index: 1;
}

#header h1 {
    font-family: 'Georgia', serif;
    font-size: 6rem;
    position: relative;
    z-index: 2;
    text-shadow: 0 0 15px rgba(20, 255, 236, 0.5);
}

.room-card {
    background-color: #151515;
    border-radius: 15px;
    padding: 1.5rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
    transition: all 0.4s ease;
    height: 100%;
    border: 1px solid #222;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.room-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(20, 255, 236, 0.2);
    border-color: var(--teal);
}

.room-image {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 10px;
    margin-bottom: 1rem;
    transition: all 0.5s ease;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

.room-card:hover .room-image {
    transform: scale(1.05);
}

.room-title {
    font-size: 1.5rem;
    margin: 1rem 0;
    font-weight: 600;
    color: var(--aqua);
    position: relative;
    padding-bottom: 10px;
}

.room-title:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 3px;
    background-color: var(--teal);
    transition: width 0.3s ease;
}

.room-card:hover .room-title:after {
    width: 80px;
}

.room-price {
    font-size: 1.3rem;
    color: #FFD700;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 5px;
}

.room-price::before {
    content: '';
    font-size: 1rem;
}

.room-rating {
    margin: 10px 0;
}

.room-rating i {
    color: gold;
    margin-right: 2px;
    text-shadow: 0 0 2px rgba(0, 0, 0, 0.5);
}

.filter-section {
    background-color: #151515;
    border-radius: 15px;
    padding: 20px;
    margin-bottom: 30px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    border: 1px solid #222;
}

.filter-section h4 {
    color: var(--aqua);
    margin-bottom: 20px;
    font-size: 1.4rem;
    position: relative;
    display: inline-block;
    padding-bottom: 8px;
}

.filter-section h4:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 3px;
    background-color: var(--teal);
}

.filter-section select,
.filter-section input {
    background-color: #222;
    color: white;
    border-radius: 10px;
    border: 1px solid #333;
    padding: 10px 15px;
    transition: all 0.3s ease;
}

.filter-section select:focus,
.filter-section input:focus {
    border-color: var(--teal);
    box-shadow: 0 0 0 3px rgba(13, 115, 119, 0.25);
    outline: none;
}

.footer {
    background-color: #111;
    color: white;
    padding: 3rem 2rem;
    text-align: center;
    margin-top: 4rem;
    border-top: 3px solid var(--teal);
    position: relative;
}

.footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--aqua), transparent);
}

.footer h5 {
    color: var(--aqua);
    margin-bottom: 15px;
    font-size: 1.5rem;
    position: relative;
    display: inline-block;
    padding-bottom: 10px;
}

.footer h5:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 25%;
    width: 50%;
    height: 2px;
    background-color: var(--teal);
}

.footer p {
    color: #ccc;
    margin-bottom: 5px;
}

/* Animation for room cards */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.room-card {
    animation: fadeInUp 0.5s ease forwards;
}

.room-features {
    display: flex;
    gap: 10px;
    margin-top: 10px;
    flex-wrap: wrap;
}

.feature-tag {
    background-color: rgba(13, 115, 119, 0.2);
    color: var(--aqua);
    padding: 4px 10px;
    border-radius: 20px;
    font-size: 0.8rem;
    display: inline-flex;
    align-items: center;
    gap: 5px;
}

/* Button styles */
.btn-filter {
    background-color: var(--teal);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 10px;
    transition: all 0.3s ease;
    font-weight: 500;
}

.btn-filter:hover {
    background-color: var(--aqua);
    color: #222;
    transform: translateY(-2px);
}

.btn-reset {
    background-color: #333;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 10px;
    transition: all 0.3s ease;
    font-weight: 500;
}

.btn-reset:hover {
    background-color: #555;
    transform: translateY(-2px);
}

    </style>
</head>



<body>
    <div class="container mt-3">
        <a href="/" class="back-link">
            Back
            <img src="/stuff/icon/undo_teal.svg" alt="Back Icon">
        </a>
    </div>

    <div class="container my-5">
        <!-- Header Section -->
        <div id="header" class="mb-5">
            <h1>Cozy Wave</h1>
            <p class="lead">Discover your perfect stay with exceptional comfort and luxury</p>
        </div>
        
        <!-- Filters Section -->
        <div class="row filter-section mb-4">
            <div class="col-12 mb-3">
                <h4><i class="fas fa-filter me-2"></i>Filter Options</h4>
            </div>
            <div class="col-md-4 mb-3">
                <label for="price-filter" class="form-label">Price Range:</label>
                <div class="d-flex gap-2">
                    <input type="number" id="min-price" class="form-control" placeholder="Min Price" min="0">
                    <input type="number" id="max-price" class="form-control" placeholder="Max Price" min="0">
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <label for="rating-filter" class="form-label">Minimum Rating:</label>
                <select id="rating-filter" class="form-select">
                    <option value="1">1 Star</option>
                    <option value="2">2 Stars</option>
                    <option value="3">3 Stars</option>
                    <option value="4">4 Stars</option>
                    <option value="5">5 Stars</option>
                </select>
            </div>

            <div class="col-md-4 mb-3 d-flex align-items-end">
                <div class="d-flex gap-2 w-100">
                    <button id="apply-filters" class="btn-filter flex-grow-1">
                        <i class="fas fa-search me-2"></i>Apply Filters
                    </button>
                    <button id="reset-filters" class="btn-reset">
                        <i class="fas fa-undo me-2"></i>Reset
                    </button>
                </div>
            </div>
        </div>




        <!-- ADDING EJS DELIMITERS HERE -->

        <!-- Room List -->
<div class="row" id="room-list">
    <% hotels.forEach(hotel => { %>
        <div class="col-md-4 mb-4">

            <div class="room-card" 
            data-link="<%= hotel.link %>" 
            data-price="<%= hotel.price %>" 
            data-rating="<%= hotel.rating %>">

                <img class="room-image" src="<%= hotel.image %>" alt="<%= hotel.name %>">
                <div class="room-title"><%= hotel.name %></div>
                <div class="room-price">â‚¹<%= hotel.price %></div>
                <div class="room-rating">
                    <% for (let i = 0; i < hotel.rating; i++) { %>
                        <i class="fas fa-star"></i>
                    <% } %>
                    <% for (let i = hotel.rating; i < 5; i++) { %>
                        <i class="far fa-star"></i>
                    <% } %>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<!-- NO Footer --> 

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"></script>

    
</body>
</html>
