<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Rooms & Prices</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/hotels.js" defer></script>
    <style>
        :root {
            --black: #000;
            --dark-gray: #111;
            --gray: #333;
            --teal: #00b8a9;
            --aqua: #00ffdd;
        }

        body {
            background-color: var(--black);
            color: white;
            font-family: 'Raleway', sans-serif;
            overflow-x: hidden;
        }

        .hotel-header {
            background-color: var(--dark-gray);
            color: var(--teal);
            padding: 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 184, 169, 0.3);
            animation: colorPulse 4.2s ease-in-out infinite;
        }

        @keyframes colorPulse {
            0% {
                box-shadow: 0 4px 15px rgba(0, 184, 169, 0.3);
            }
            50% {
                box-shadow: 0 4px 15px rgba(0, 255, 221, 0.5);
            }
            100% {
                box-shadow: 0 4px 15px rgba(0, 184, 169, 0.3);
            }
        }

        .hotel-header h1 {
            font-family: 'Monoton', cursive;
            letter-spacing: -2px;
            animation: colorSwitch 4.2s ease-in-out infinite;
        }

        .hotel-image {
            width: 100%;
            height: 400px;
            object-fit: cover;
            border-radius: 10px;
            border: 2px solid var(--gray);
            transition: transform 0.3s, border 0.3s;
            animation: sick 2s ease-in-out infinite;
        }

        .hotel-image:hover {
            transform: scale(1.02);
            border: 2px solid var(--teal);
            animation: none;
        }

        .hotel-details {
            margin-top: 2rem;
            background-color: rgba(17, 17, 17, 0.7);
            padding: 2rem;
            border-radius: 10px;
            border: 2px solid var(--gray);
            transition: border 0.3s;
        }

        .hotel-details:hover {
            border: 2px solid var(--teal);
        }

        .hotel-title {
            font-size: 2rem;
            font-weight: bold;
            font-family: 'Modern Antiqua', serif;
            color: var(--teal);
            margin-bottom: 1rem;
        }

        .hotel-price {
            font-size: 1.5rem;
            color: var(--aqua);
            font-weight: 600;
        }

        .rating i {
            color: var(--aqua);
        }

        .review-section {
            margin-top: 2rem;
        }

        .review-card {
            background-color: var(--dark-gray);
            padding: 1.5rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
            border: 2px solid var(--gray);
            transition: transform 0.3s, border 0.3s;
            animation: sick 2s ease-in-out infinite;
        }

        .review-card:hover {
            transform: translateY(-5px);
            border: 2px solid var(--teal);
            animation: none;
        }

        .review-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: var(--teal);
        }

        .review-content {
            font-size: 1rem;
            margin-top: 0.5rem;
            font-style: italic;
        }

        .footer {
            background-color: var(--dark-gray);
            color: white;
            padding: 2rem;
            text-align: center;
            margin-top: 2rem;
            border-top: 4px solid var(--teal);
        }

        .btn-primary {
            background-color: var(--teal);
            border-color: var(--teal);
            color: var(--black);
            font-weight: bold;
            transition: transform 0.3s, background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: var(--aqua);
            border-color: var(--aqua);
            transform: scale(1.05);
        }

        .btn-warning {
            background-color: var(--aqua);
            border-color: var(--aqua);
            color: var(--black);
            font-weight: bold;
            transition: transform 0.3s, background-color 0.3s;
        }

        .btn-warning:hover {
            background-color: var(--teal);
            border-color: var(--teal);
            transform: scale(1.05);
        }

        .form-control {
            background-color: rgba(51, 51, 51, 0.7);
            color: white;
            border: 1px solid var(--gray);
            border-radius: 8px;
        }

        .form-control:focus {
            background-color: rgba(51, 51, 51, 0.9);
            color: white;
            border-color: var(--aqua);
            box-shadow: 0 0 0 0.25rem rgba(0, 255, 221, 0.25);
        }

        @keyframes colorSwitch {
            0% {
                color: var(--teal);
            }
            50% {
                color: var(--aqua);
            }
            100% {
                color: var(--teal);
            }
        }

        @keyframes sick {
            0% {
                border: 2px solid var(--gray);
            }
            50% {
                border: 2px solid var(--teal);
            }
            100% {
                border: 2px solid var(--gray);
            }
        }
    </style>
</head>
<body>
    <a href="/" class="back-link">
        Back
        <img src="/stuff/icon/undo_teal.svg" alt="Back Icon">
    </a>


    <!--div id="header">
        <h1>Cozy Wave</h1>
    </div-->
 
    <div class="container my-5">
        <!-- Filters Section -->
        <div class="row filter-section mb-4">
            <div class="col-md-6 mb-3">
                <label for="price-filter" class="form-label">Price Range:</label>
                <div class="d-flex gap-2">
                    <input type="number" id="min-price" class="form-control" placeholder="Min Price" min="0">
                    <input type="number" id="max-price" class="form-control" placeholder="Max Price" min="0">
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <label for="rating-filter" class="form-label">Minimum Rating:</label>
                <select id="rating-filter" class="form-select">
                    <option value="1">1 Star</option>
                    <option value="2">2 Stars</option>
                    <option value="3">3 Stars</option>
                    <option value="4">4 Stars</option>
                    <option value="5">5 Stars</option>
                </select>
            </div>
        </div>

        


        <!-- ADDING EJS DELIMITERS HERE -->


        <!-- Room List -->
        <div class="row" id="room-list">
            <% hotels.forEach(hotel => { %>
              <div class="col-md-4 mb-4 room-card" 
                   data-price="<%= hotel.price %>" 
                   data-rating="<%= hotel.rating %>" 
                   onclick="navigateToHotel('<%= hotel.link %>')">
                <img class="room-image" src="<%= hotel.image %>" alt="Room Image">
                <div class="room-title"><%= hotel.name %></div>
                <div class="room-rating">
                  <% for (let i = 0; i < hotel.rating; i++) { %>
                    <i class="fa fa-star"></i>
                  <% } %>
                </div>
              </div>
            <% }) %>
          </div>
          

           


    
    <!-- Footer -->
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>About Cozy Wave</h5>
                    <p>Cozy Wave is a luxurious hotel offering the best services and amenities to make your stay memorable.</p>
                </div>
                <div class="col-md-6">
                    <h5>Contact Us</h5>
                    <p>Email: contact@cozywave.com</p>
                    <p>Phone: +123 456 7890</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"></script>

    

</body>
</html>
