    <style>
        
        #image-track {
            display: flex;
            gap: 5vmin;
            position: absolute;
            left: 105vmin;
            top: 50%;
            transform: translate(0%, -50%);
            user-select: none;
            transition: left 1s ease-in-out;

        }

        #image-track.move {
            display: flex;
            gap: 5vmin;
            position: absolute;
            left: max(10%, calc(100vw - 100%));
            top: 50%;
            transform: translate(0%, -50%);
            user-select: none;
        }

        #image-track .image-container {
            position: relative;
            width: 50vmin;
            height: 70vmin;
            overflow: hidden;
            transition: transform 0.3s;
            border-radius: 10px; 
            border: 2px solid var(--gray);
            animation: sick 2s ease-in-out infinite;
            transition: background-color 0.3s ease-in-out, 
                width 0.6s ease-in-out, 
                
        }

        #image-track .image-container:hover {
            transform: scale(1.2);
            z-index: 10;
            border: 0;
            animation: none;
        }

        #image-track .image-container .image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: 100% center;
            transition: filter 0.3s;
            border-radius: 10px; 
            
        }

        #image-track .image-container:hover .image {
            filter: blur(5px); 
        }

        #image-track .image-container .overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-family: "Modern Antiqua", serif;
            font-size: 1.5rem;
            text-align: center;
            z-index: 20;
            opacity: 0;
            transition: opacity 0.3s;
        }

        #image-track .image-container:hover .overlay {
            opacity: 1;
        }
        .headed {
            position: absolute;
            font-family: "Monoton", serif;
            font-weight: 400;
            font-style: normal;
            font-size: 25vmin;
            color: var(--teal);
            opacity: 1;
            pointer-events: none;
            transition: opacity 0.3s ease-out;            
        }
        .headed.dud{
            opacity: 0.2 !important;
        }
        #cozy {
            position: absolute;
            top: 53%;
            transform: translateY(-50%);
            left: 10px;
            color: var(--teal);
            animation: colorSwitch 4.2s ease-in-out infinite;
            letter-spacing: -6.5px;
            line-height:1.2;
            
        }

        #wave {
            position: absolute;
            top: 60%;
            transform: translateY(-50%);
            left: 15vmin;
            color: var(--aqua);
            animation: Colorswitch 4.2s ease-in-out infinite;
            letter-spacing: -8px;
            line-height: 1.2;
        }

        @keyframes colorSwitch {
            0% {
                color: var(--teal);
            }
            50% {
                color: var(--aqua);
            }
            100% {
                color: var(--teal);
            }
        }
        @keyframes Colorswitch {
            0% {
                color: var(--aqua);
            }
            50% {
                color: var(--teal);
            }
            100% {
                color: var(--aqua);
            }
        }
        @keyframes sick {
            0% {
                border: 2px solid var(--gray);
            }
            
            50% {
                border: 2px solid var(--teal);
            }
            
            100% {
                border: 2px solid var(--gray);
            }
        }
        .no-move {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: 50% center;
            transition: filter 0.3s;
            border-radius: 10px;
        }

        
    

    #login {
    background-color: transparent;
