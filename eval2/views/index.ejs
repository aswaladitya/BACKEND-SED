}
#formTitle {
    font-family: "Modern Antiqua", serif;
    font-size: 2rem;
    color: var(--teal);
    margin-bottom: 1vmin;
}
.expanding:hover {
    cursor: pointer;
}
#login img {
    transition: opacity 0.2s ease-in, transform 0.2s ease-in;
    position: absolute;
}

#login.expanding img {
    opacity: 0;
    transform: scale(0.9);
    visibility: hidden;
}


#login.expanding {
